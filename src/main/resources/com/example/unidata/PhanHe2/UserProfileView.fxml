<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="558.0" prefWidth="600.0" 
            xmlns="http://javafx.com/javafx/23.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.example.unidata.controller.UserProfileController">
    <children>
        <VBox spacing="15" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" 
              AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">
            
            <Label text="Thông tin cá nhân" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
            
            <GridPane hgap="15" vgap="15">
                <padding>
                    <Insets top="20" />
                </padding>
                
                <columnConstraints>
                    <ColumnConstraints minWidth="100" prefWidth="150" />
                    <ColumnConstraints prefWidth="350" />
                </columnConstraints>
                
                <Label text="Mã sinh viên:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Label fx:id="lblStudentId" text="SV001" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                
                <Label text="Họ và tên:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <Label fx:id="lblFullName" text="Nguyễn Văn A" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                
                <Label text="Giới tính:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <Label fx:id="lblGender" text="Nam" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                
                <Label text="Ngày sinh:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <Label fx:id="lblDOB" text="01/01/2000" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                
                <Label text="Địa chỉ:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <Label fx:id="lblAddress" text="123 Đường ABC, Quận XYZ, TP.HCM" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                
                <Label text="Điện thoại:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                <Label fx:id="lblPhone" text="0987654321" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                
                <Label text="Khoa:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                <Label fx:id="lblFaculty" text="Công nghệ thông tin" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                
                <Label text="Tình trạng:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                <Label fx:id="lblStatus" text="Đang học" GridPane.columnIndex="1" GridPane.rowIndex="7" />
            </GridPane>
            
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button text="Chỉnh sửa" onAction="#onEditProfile"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>