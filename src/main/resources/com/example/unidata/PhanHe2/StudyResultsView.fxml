<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="558.0" prefWidth="600.0" 
            xmlns="http://javafx.com/javafx/23.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.example.unidata.controller.StudyResultsController">
    <children>
        <VBox spacing="15" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" 
              AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">
            
            <Label text="Kết quả học tập" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
            
            <HBox spacing="10">
                <ComboBox fx:id="semesterComboBox" promptText="Chọn học kỳ"/>
                <ComboBox fx:id="yearComboBox" promptText="Chọn năm học"/>
                <Button text="Xem điểm" onAction="#onViewGrades"/>
            </HBox>
            
            <TableView fx:id="gradesTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colCode" text="Mã HP" prefWidth="80"/>
                    <TableColumn fx:id="colName" text="Tên học phần" prefWidth="200"/>
                    <TableColumn fx:id="colCredits" text="Số tín chỉ" prefWidth="60"/>
                    <TableColumn fx:id="colPractice" text="Điểm TH" prefWidth="70"/>
                    <TableColumn fx:id="colMidterm" text="Điểm QT" prefWidth="70"/>
                    <TableColumn fx:id="colFinal" text="Điểm CK" prefWidth="70"/>
                    <TableColumn fx:id="colAverage" text="Điểm TK" prefWidth="70"/>
                </columns>
            </TableView>
            
            <GridPane hgap="15" vgap="10">
                <padding><Insets top="10" /></padding>
                
                <columnConstraints>
                    <ColumnConstraints minWidth="150" />
                    <ColumnConstraints minWidth="80" />
                    <ColumnConstraints minWidth="150" />
                    <ColumnConstraints minWidth="80" />
                </columnConstraints>
                
                <Label text="Tổng số tín chỉ đã học:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Label fx:id="lblTotalCredits" text="0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                
                <Label text="Điểm trung bình học kỳ:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                <Label fx:id="lblSemesterGPA" text="0.0" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                
                <Label text="Tổng số tín chỉ tích lũy:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <Label fx:id="lblAccumulatedCredits" text="0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                
                <Label text="Điểm trung bình tích lũy:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <Label fx:id="lblCumulativeGPA" text="0.0" GridPane.columnIndex="3" GridPane.rowIndex="1" />
            </GridPane>
        </VBox>
    </children>
</AnchorPane>