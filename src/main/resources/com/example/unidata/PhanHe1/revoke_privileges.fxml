        <!-- Main content area for Revoke Privileges -->
        <AnchorPane layoutX="215.0" layoutY="52.0" prefHeight="538.0" prefWidth="570.0">
            <children>
                <Label layoutX="14.0" layoutY="14.0" text="Revoke Privileges">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <!-- Revoke form area -->
